{
  "compilerOptions": {
    "target": "ESNext",                                  
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": false,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
